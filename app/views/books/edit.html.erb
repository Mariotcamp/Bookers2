<div class="container">
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2 col-sm-offset-2 col-sm-8 col-md-offset-3 col-md-6">
      <h1>Editing Book</h1>
      <%= form_with model: @book, local:true do |f| %>
      <%= render partial: 'layouts/error_messages', locals:{ book: @book } %>
        <p>Title</p>
        <%= f.text_field :title, class: "edit_form" %>
        <p>Opinion</p>
        <%= f.text_area :body, class: "edit_form" %>
        <%= f.submit 'Update Book', class: "btn btn-primary edit_form" %>
      <% end %>
      <div class="bottom-botton">
      <%= link_to 'Show', book_path(@book) %>
      <span class="left-border left-padding"><%= link_to 'Back', books_path %></span>
      </div>
    </div>
  </div>
  <p style="text-align: right;">CopyRight Infratop.inc</p>
</div>
