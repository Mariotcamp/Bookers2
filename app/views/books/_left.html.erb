<div class="col-xs-3 left-content">
      <h1>User info</h1>
        <%= attachment_image_tag @user, :profile_image, :fill, 80, 80, fallback: "noimage.jpg" %>

      <table class="top-table">
        <tr>
          <td>name</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>introduction</td>
          <td><%= @user.introduction %></td>
        </tr>
      </table>

      <div class="repaire">
        <% if @user.id == current_user.id %>
          <%= link_to edit_user_path(@user) do %>
            <i class="fas fa-tools"></i>
          <% end %>
        <% else %>
          <%= link_to user_path(current_user.id) do %>
            <i class="fas fa-tools"></i>
          <% end %>
        <% end %>
      </div>
      <%= form_with model: @book, local:true do |f| %>
      <%= render partial: 'layouts/error_messages', locals:{ book: @book } %>
      <h2>New book</h2>
      <p>Title</p>
        <%= f.text_field :title, class: "submit-form" %>
      <p>Opinion</p>
        <%= f.text_field :body, class: "submit-form" %><br><br>
        <%= f.submit 'Create Book', class: "btn btn-primary create-botton" %>
      <% end %>
    </div>